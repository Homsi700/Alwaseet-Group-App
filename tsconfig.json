{
  "compilerOptions": {
    "target": "ES2020",
    "lib": [
      "dom",
      "dom.iterable",
      "esnext"
    ],
    "module": "ESNext",
    "moduleResolution": "NodeNext",
    "esModuleInterop": true,
    "strict": true,
    "skipLibCheck": true,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": false, // ← مهم للسكربتات المستقلة
    "outDir": "./dist", // ← إضافة مسار للإخراج
    "rootDir": "./src", // ← تأكد أنه يتطابق مع هيكل مشروعك
    "jsx": "preserve", // ← فقط إذا كنت تستخدم Next.js
    "paths": {
      "@/*": [
        "./src/*"
      ]
    },
    "allowJs": true,
    "incremental": true,
    "plugins": [
      {
        "name": "next"
      }
    ]
  },
  "include": [
    "next-env.d.ts",
    "**/*.ts",
    "**/*.tsx",
    ".next/types/**/*.ts",
    "src/scripts/**/*" // ← تضمين مجلد السكربتات
  ],
  "exclude": [
    "node_modules"
  ]
}
